# Masterlist Environment Configuration
# Copy this file to .env and update values

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=change-this-to-a-random-secret-key
HOST=0.0.0.0
PORT=5000

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
CACHE_ENABLED=true
CACHE_TTL=300

# Database Configuration (future)
DATABASE_URL=postgresql://masterlist:password@localhost:5432/masterlist

# API Configuration
API_RATE_LIMIT=100
API_RATE_LIMIT_PERIOD=60

# Analytics Configuration
REPORT_GENERATION_TIMEOUT=300
MAX_REPORT_SIZE_MB=50
ENABLE_ASYNC_REPORTS=true

# AI Insights Configuration
AI_INSIGHTS_ENABLED=true
INSIGHTS_REFRESH_HOURS=24
OPENAI_API_KEY=your-openai-api-key-here

# Email Configuration (optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Monitoring (optional)
SENTRY_DSN=
PROMETHEUS_ENABLED=false

# Security
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# Development Tools
JUPYTER_TOKEN=
DEBUG_PORT=5678

# Docker Specific
DOCKER_BUILDKIT=1
COMPOSE_PROJECT_NAME=masterlist